extends layout

block content
  link(rel="stylesheet", href="/stylesheets/todo_main.css")
  script(src="/javascripts/todo_main.js")

  section.todo_main
    h1(id="main_title",onclick="main_title_click()") MY TODO LIST
    form(method="POST")
      input(type="text", name="t_text", id="todo",placeholder="하고싶은 일")
      button(type="button",id="btn-save") 저장

    article.todo_list
      ul
        each vo in todoList 
            li= vo.t_text
            li= vo.t_date
            li#peace= vo.t_time
         

