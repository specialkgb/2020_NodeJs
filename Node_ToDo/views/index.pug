extends layout

block content
  link(rel="stylesheet", href="/stylesheets/todo_main.css")
  script(src="/javascripts/todo_main.js")

  section.todo_main
    h1(id="main_title",onclick="main_title_click()") MY TODO LIST
    form(method="POST")
      input(type="text", name="todo", id="todo",placeholder="하고싶은 일")
      button(type="button",id="btn-save") 저장

    article.todo_list
      ul
        li 온라인 수업
        li TodoList 만들기
        li 오늘의 과제
        li 내일은 금요일
        li 다음주면 땡
